<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">lesson_form.lesson_form_data_source</item>
            <item name="deps" xsi:type="string">lesson_form.lesson_form_data_source</item>
            <item name="namespace" xsi:type="string">lesson_form</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Lesson Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Overdose\LessonOne\Block\Adminhtml\Lesson\Edit\SaveButton"/>
            <button name="back" class="Overdose\LessonOne\Block\Adminhtml\Lesson\Edit\BackButton"/>
        </buttons>
        <layout>
            <navContainerName>left</navContainerName>
            <type>tabs</type>
        </layout>
        <deps>
            <dep>lesson_form.lesson_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="lesson_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="lessonone/lesson/save"/>
        </settings>
        <dataProvider class="Overdose\LessonOne\Model\DataProvider" name="lesson_form_data_source">
            <settings>
                <requestFieldName>lesson_id</requestFieldName>
                <primaryFieldName>lesson_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">General</label>
        </settings>
        <field name="lesson_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">lesson</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
            </settings>
        </field>
        <field name="title" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">lesson</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Title</label>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="content" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">lesson</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Content</label>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="file" formElement="fileUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">lesson</item>
                    <item name="component" xsi:type="string">Overdose_LessonOne/js/file-uploader</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="lessonone/lesson/upload"/>
                        <item name="allowedExtensions" xsi:type="string">csv xls traffic</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="true">File</label>
                <elementTmpl>ui/form/element/uploader/uploader</elementTmpl>
            </settings>
        </field>
    </fieldset>
</form>